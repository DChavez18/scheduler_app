<h1>All Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Last Updated</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, user_path(user), class: "user-link" %></td>
        <td><%= mail_to user.email, user.email %></td>
        <td><%= user.created_at.strftime("%B %d, %Y") %></td>
        <td>
          <%= user.updated_at.strftime("%B %d, %Y") %>
          <% if user.updated_at > 1.day.ago %>
            <span class="badge badge-success">Updated Recently</span>
          <% end %>
        </td>
        <td>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-primary btn-sm" %>
          <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create New User", new_user_path, class: "btn btn-success" %>
